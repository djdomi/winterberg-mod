				boot.PushActionExecuteCommand(ACTION_APPEND,"beiboot_auf",&ship,1,false);
			} else	
				Mission::PlayHint("Mutterschiff nicht gefunden!");				
		} else {
			// System::Log("Boot aufladen %s nach %s",Caller->GetName(),Target->GetName());
			Vehicle ship(Target);
			Vehicle boot(Caller);
			PersonList pl=boot.GetPassengers();
			PersonList tl=boot.GetTransports();
			for (int i=pl.GetNumPersons()-1;i>=0;i--) {
				boot.RemovePassenger(pl.GetPerson(i));
				ship.AddPassenger(pl.GetPerson(i));
