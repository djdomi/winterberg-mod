object FzInspektion : CommandScript
{
	
	FzInspektion()	
	{
	}

	void PushActions(GameObject *Caller, Actor *Target, int ChildID)
	{
		Vehicle v(Caller);
		// System::Log("Inspektion %s",v.GetName());
		float dam=v.GetEnergy()/v.GetMaxEnergy()*100;
		if (dam < 50 || ChildID==60)
		{
			v.AssignCommand("ich_bin_nicht_frei");
			v.SetCommandable(false);
			// System::Log("Fz ausser Dienst %s",v.GetName());
			v.PushActionExecuteCommand(ACTION_NEWLIST,"Fzreparieren",Target,ChildID,false);
		} else if (v.IsChildEnabled("INFEKT")) {
			int h,m,s;
			// System::Log("Fz Desinfektion %s",v.GetName());
			Game::GetTime(h,m,s);
			if (h>20)
				h-=24;
			v.PushActionExecuteCommand(ACTION_NEWLIST,"dienstbeginn",Caller,h+3,false);
		} else {
			if (!v.HasCommand("feierabend"))
				v.RemoveCommand("ich_bin_nicht_frei");
			// System::Log("Fz Wache Funk aus %s",v.GetName());
			v.ClearFlag(FLAG_FUNK);
			v.ClearActions();
		}
		// System::Log("Fz Inspektion Ende %s",v.GetName());
	}
};

