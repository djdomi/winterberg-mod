object pass_tausch: CommandScript
{

	pass_tausch()
	{
		SetIcon("EmptyCar");
		SetCursor("EmptyCar");
		SetValidTargets(ACTOR_VEHICLE);
	}

	bool CheckTarget(GameObject *Caller, Actor *Target, int ChildID)
	{
		Vehicle v(Target);
		return Caller->GetID()!=Target->GetID() && (v.GetVehicleType()==VT_FIREFIGHTERS_FLB || v.GetVehicleType()==VT_FIREFIGHTERS_FMB || v.GetVehicleType()==VT_AMBULANCE_RTW); 
	}
	
	bool CheckPossible (GameObject *Caller)
	{
		Vehicle v(Caller);
		return v.GetNumTransported()>0;
	}

	
	void PushActions(GameObject *Caller, Actor *Target, int code)
	{
		if (code==1) {
			Vehicle don(Caller); Vehicle rec(Target);
			bool anland=rec.GetVehicleType()==VT_AMBULANCE_RTW;
			PersonList pl=don.GetTransports();
			PersonList crew=rec.GetPassengers();
			Person doc; int i;
			Vector pos;
			for (i=0;i<crew.GetNumPersons() && !doc.IsValid();i++)
				if (crew.GetPerson(i)->IsDoctor())
					doc=crew.GetPerson(i);
			for (i=0;i<pl.GetNumPersons();i++) {
				don.RemoveTransport(pl.GetPerson(i));
				if (anland) {
					pos=rec.GetPosition();
					Game::FindFreePosition(pl.GetPerson(i),pos,250);
					pl.GetPerson(i)->SetPosition(pos);
					pl.GetPerson(i)->SetAnimation("layingwounded02");
				} else {
					rec.AddTransport(pl.GetPerson(i));
					if (doc.IsValid()) 
						doc.PushActionExecuteCommand(ACTION_INSERT,"lna_categorize",pl.GetPerson(i),10,false);
				}
			}
			if (anland) {
				pos=rec.GetPosition();
				Game::FindFreePosition(&doc,pos,300);
				don.RemovePassenger(&doc);
				doc.SetPosition(pos);
			}
		} else {
			Caller->PushActionMove(ACTION_NEWLIST,Target->GetPosition());
			Caller->PushActionExecuteCommand(ACTION_NEWLIST,"pass_tausch",Target,1,false);
		}
	}
};

