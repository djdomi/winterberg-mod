object TriageKarte : CommandScript
{
	TriageKarte()
	{
	}

    	void PushActions(GameObject *Caller, Actor *Target, int childID)
	{
		Person rd(Caller);
		bool candie=rd.IsDoctor();
		if (Target->GetType()==ACTOR_PERSON)
		{
			Person p(Target);
			float l=p.GetLife();
			int tc=2;
			if (p.IsDead())
				if (p.HasCommand("manv_schwarz") && childID==0 && (candie || p.HasCommand("na_cat")))
					tc=4;
				else
					tc=3;
			else
				if (l<na_her)
					tc=3;
				else if (l<rtw_her)
					tc=2;
				else if (l<ktw_liegend)
					tc=1;
				else
					tc=0;
			if (p.HasCommand("kinderna") && tc<3)
				tc=5;
			p.PlaceObjectInRightHand(tricard[tc]);
			// System::Log("Triage %s %s",Caller->GetName(),tricard[tc]);
		} else {
			GameObject o(Target);
			o.DrawOrientedBBox(255,255,0);
			o.PushActionExecuteCommand(ACTION_APPEND,"TriageKarte",Target,0,false);
		}
	}
};


