			Person p(Caller);
			p.SetRole(ROLE_CIVILIAN);
			p.SetBehaviour(BEHAVIOUR_CIVILIAN_GAZER);
		}
		Caller->PushActionMove(ACTION_NEWLIST,Target,TARGET_TREATMENT);
