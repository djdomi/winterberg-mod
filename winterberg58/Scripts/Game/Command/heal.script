	{
		if (childID == 0)
		{
			// Caller->PushActionSwitchAnim(ACTION_NEWLIST,"kneeldown");
			Caller->PushActionSwitchAnim(ACTION_NEWLIST,"treatinjured1");
			Caller->PushActionExecuteCommand(ACTION_APPEND,"BasisRea",Target,1,false);
		} else {
			Person p(Target);
