				if ((pl.GetPerson(q)->GetEnteredCarID() != -1)) //  && (pl.GetPerson(q)->GetEnteredCarID() != v.GetID()))
					n--;
		}
		abfahrt=(n == 0);
	}
	if (childID > 0)
	{
		int pl=v.GetNumPassengers();
		abfahrt=(abfahrt && (pl >= childID)); 
	}
	if (abfahrt)
	{
		v.PushActionExecuteCommand(ACTION_NEWLIST,"gohome_winterberg",&v,0,false);
	}
   }
