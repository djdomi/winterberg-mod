   {
	Vehicle v(Target);
	bool abfahrt=true;
	bool transport=false;
	int cid=childID;

	
	if (childID > 10) 
	{
		childID=childID-10;
		transport=true;
		if (v.GetFreeTransports() == 0)
			abfahrt=true;	
		else
			abfahrt=false;
	} else if (childID == 0) {
		PersonList pl(Caller->GetName());
